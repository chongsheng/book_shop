{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Orders list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Goodid</th>
                <th>Name</th>
                <th>Price</th>
                <th>Totalmoney</th>
                <th>Buytime</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ibw_orders_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.goodId }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.totalMoney }}</td>
                <td>{{ entity.buyTime }}</td>
                <td>{{ entity.status }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ibw_orders_show', { 'id': entity.id }) }}">show
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('ibw_orders_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
