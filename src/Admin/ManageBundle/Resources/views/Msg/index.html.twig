{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Msg list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>Addtime</th>
                <th>Status</th>
                <th>Title</th>
                <th>Replay</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_msg_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.message }}</td>
                <td>{{ entity.addTime }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.replay }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_msg_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_msg_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_msg_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
